<!DOCTYPE html>
<html lang="en">

<%- include( "partials/head.ejs") %>

    <body>
        <main>
            <%- include("partials/sidebar.ejs") %>
                <div class="container mt-5">
                    <form action="/dashboard/register" method="POST">
                        <div class="text-center mb-5">
                            <h1 class="h3 mb-3 font-weight-normal">Register New User</h1>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputUsername">Username</label>
                                <input type="username" class="form-control" id="inputUsername" placeholder="Username" name="username">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword">Password</label>
                                <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
                            </div>
                        </div>

                        <!-- profile user biodata -->
                        <h3 class="mt-3">Biodata</h3>
                        <div class="form-row">
                            <div class="form-group col">
                                <label for="inputFullname">Full Name</label>
                                <input type="fullname" class="form-control" id="inputUsername" placeholder="Ex: John Doe" name="fullname">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label for="inputGender">Gender</label>
                                <input type="gender" class="form-control" id="inputGender" placeholder="Male/Female" name="gender">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label for="inputEmail">Email</label>
                                <input type="email" class="form-control" id="inputEmail" placeholder="yourname@email.com" name="email">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label for="inputPhone">Phone Number</label>
                                <input type="phone" class="form-control" id="inputPhone" placeholder="081266554433" name="phone">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
                    </form>

                </div>
        </main>
    </body>

</html>